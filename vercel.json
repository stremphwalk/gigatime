{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "rewrites": [
    {
      "source": "/api/logout",
      "destination": "/api/auth/logout"
    },
    {
      "source": "/api/auth/login",
      "destination": "/api/auth/login"
    },
    {
      "source": "/api/auth/callback",
      "destination": "/api/auth/callback"
    },
    {
      "source": "/api/auth/logout",
      "destination": "/api/auth/logout"
    },
    {
      "source": "/api/auth/user",
      "destination": "/api/auth/user"
    },
    {
      "source": "/api/auth/simple-login",
      "destination": "/api/auth/simple-login"
    },
    {
      "source": "/api/auth/simple-callback",
      "destination": "/api/auth/simple-callback"
    },
    {
      "source": "/api/debug",
      "destination": "/api/debug"
    },
    {
      "source": "/api/auth/test-login",
      "destination": "/api/auth/test-login"
    },
    {
      "source": "/api/auth/test-callback",
      "destination": "/api/auth/test-callback"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/**": {
      "includeFiles": "{server,shared,migrations}/**"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}