# Production Environment Variables for Vercel + Supabase

# Supabase Database Configuration
DATABASE_URL=postgresql://postgres:[password]@[project-ref].supabase.co:5432/postgres
PGDATABASE=postgres
PGHOST=[project-ref].supabase.co
PGPORT=5432
PGUSER=postgres
PGPASSWORD=[your_supabase_password]

# Deepgram API (Voice Recognition)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Session Secret (Generate a strong random string)
SESSION_SECRET=your_super_secure_session_secret_here

# Server Configuration
NODE_ENV=production
PORT=3000

# Auth0 Configuration (Server)
AUTH0_SECRET=your_production_auth0_secret_here
AUTH0_BASE_URL=https://your-app.vercel.app
AUTH0_CLIENT_ID=your_auth0_client_id_here
AUTH0_CLIENT_SECRET=your_auth0_client_secret_here
AUTH0_ISSUER_BASE_URL=https://your-domain.auth0.com
AUTH0_AUDIENCE=your_auth0_api_audience_here

# Auth0 Configuration (Client - Vite)
VITE_AUTH0_DOMAIN=your-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your_auth0_client_id_here
VITE_AUTH0_AUDIENCE=your_auth0_api_audience_here

# Optional: Remove Clerk configuration in production
# VITE_CLERK_PUBLISHABLE_KEY=
# CLERK_SECRET_KEY=